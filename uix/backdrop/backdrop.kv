<EZEBackdrop>
    eze_bg_color:
        root.theme_cls.primary_color \
        if not root.back_layer_color \
        else root.back_layer_color

    EZEBackdropToolbar:
        id: toolbar
        type_height: "small"
        anchor_title: root.anchor_title
        title: root.title
        elevation: 0
        left_action_items: root.left_action_items
        right_action_items: root.right_action_items
        pos_hint: {"top": 1}
        eze_bg_color:
            root.theme_cls.primary_color \
            if not root.back_layer_color \
            else root.back_layer_color

    _BackLayer:
        id: back_layer
        y: -toolbar.height
        padding: 0, 0, 0, toolbar.height + dp(10)

    _FrontLayer:
        id: _front_layer
        eze_bg_color: 0, 0, 0, 0
        orientation: "vertical"
        size_hint_y: None
        height: root.height - toolbar.height
        padding: root.padding
        eze_bg_color:
            root.theme_cls.bg_normal \
            if not root.front_layer_color \
            else root.front_layer_color
        radius:
            [root.radius_left, root.radius_right,
            0, 0]

        OneLineListItem:
            id: header_button
            text: root.header_text
            divider: None
            _no_ripple_effect: True
            on_press: root.open()

        EZEBoxLayout:
            id: front_layer
            padding: 0, 0, 0, "10dp"
